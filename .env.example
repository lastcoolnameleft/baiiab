# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=your-deployment-name

# Service Configuration
TITLE=BAIIAB
LOGO_IMG=sheep

# OpenTelemetry Configuration
# Enable/disable telemetry (default: true)
OTEL_ENABLED=true

# Service identification
OTEL_SERVICE_NAME=baiiab
OTEL_SERVICE_VERSION=1.0.0

# Console exporter - prints telemetry to stdout (useful for development)
OTEL_CONSOLE_EXPORTER=true

# OTLP exporter endpoint (optional, for production observability)
# Uncomment and configure for Jaeger, Prometheus, Grafana Cloud, etc.
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Environment identifier
ENVIRONMENT=development
