# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_DEPLOYMENT=gpt-4

# Service Configuration
TITLE=AI In A Box
LOGO_IMG=sheep #azure_monochrome

# OpenTelemetry Configuration
# Enable/disable telemetry (default: true)
OTEL_ENABLED=true

# Service identification
OTEL_SERVICE_NAME=baiiab
OTEL_SERVICE_VERSION=1.0.0

# Console exporter - prints telemetry to stdout (useful for development)
OTEL_CONSOLE_EXPORTER=true

# Environment identifier
ENVIRONMENT=development

#OTEL_EXPORTER_OTLP_ENDPOINT=localhost:4317
#OTEL_EXPORTER_OTLP_TRACES_ONLY=false
#OTEL_EXPORTER_OTLP_NAME=local-edot

# Elastic supports both traces and metrics via OTLP
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_EXPORTER_OTLP_HEADERS=
OTEL_RESOURCE_ATTRIBUTES=service.name=baiiab,service.version=1.0,deployment.environment=development
OTEL_EXPORTER_OTLP_TRACES_ONLY=false
OTEL_EXPORTER_OTLP_NAME=elastic-cloud

# Note: gRPC metadata keys must be lowercase
# Headers format: key1=value1,key2=value2
# For Bearer tokens: Authorization=Bearer YOUR_TOKEN
